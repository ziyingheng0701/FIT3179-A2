{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 350,
    "height": 400,
    "title": "Trade Growth of Malaysia",
    "data": {
      "url": "https://raw.githubusercontent.com/ziyingheng0701/FIT3179-A2/refs/heads/main/TradeGrowth.csv",
      "format": { "type": "csv" }
    },
    "params": [
      {
        "name": "showExport",
        "value": true,
        "bind": {
          "input": "checkbox",
          "name": "Export"
        }
      },
      {
        "name": "showImport",
        "value": true,
        "bind": {
          "input": "checkbox",
          "name": "Import"
        }
      }
    ],
    "transform": [
      {
        "calculate": "datetime(datum.year, datum.month - 1, 1)",
        "as": "date"
      },
      {
        "filter": "(datum.trade_type === 'import' && showImport) || (datum.trade_type === 'export' && showExport)"
      },
       {
      "calculate": "datum.trade_type === 'import' ? 'import' : 'export'",
      "as": "CustomShow"
      },
      {
        "calculate": "format(datum.trade_growth, '.2f') + '%' ",
        "as": "trade_growth_percentage"
      }
    ],
    "mark": {"type": "line","point":true},
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "timeUnit": "yearmonth",
        "axis": {
          "title": "Month and Year",
          "format": "%b %Y",
          "labelColor": "#6B7280",
          "titleColor": "#374151",
          "labelAngle": 45,
          "grid": false
        }
      },
      "y": {
        "field": "trade_growth",
        "type": "quantitative",
        "axis": {
          "title": "Growth (%)",
          "format": ".2f"
        },
        "scale": {
          "domain": [-50, 50]
        }
      },
      "color": {
        "field": "trade_type",
        "type": "nominal",
        "scale": {
          "domain": ["import", "export"],
          "range": ["#74b3d2", "#f1962e"]
        },
        "legend": {
          "title": "Trade Type",
          "labelFontSize": 12,
          "titleFontSize": 12,
          "titleColor": "#374151",
          "labelColor": "#6B7280"
        }
      },
      "tooltip": [
        {"field": "date", "type": "temporal", "title": "Date","format": "%b %Y"},
        {"field": "trade_type","title": "Trade Type"},
        {"field": "trade_growth_percentage", "title": "Growth"}
      ]
    },
    "config": {
    "background": "#fffefb",
    "font": "sans-serif",
    "title": {
        "fontSize": 16,
        "fontWeight": "bold",
        "color": "#38393a",
        "align": "center"
      }

    }
}
  